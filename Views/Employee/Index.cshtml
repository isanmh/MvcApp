@* @model List<MvcApp.Models.Employee> *@
<h4>Employee List</h4>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
    Create
</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nama Lengkap</th>
            <th scope="col">Divisi</th>
            <th scope="col">Role</th>
            <th scope="col">Aksi</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var employee in Model)
        {
            <tr>
                <th scope="row">@i</th>
                @{
                    i++;
                }
                <td>@employee.Name</td>
                <td>@employee.Division</td>
                <td>@employee.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">
                        Edit
                    </a>
                    @* <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-outline-danger">Delete</a> *@
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@employee.Id" />
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('anda yakin?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>